<%-include("../partials/header")%>
<div class="container">
	<div class="row">
		<h1 class="text-center">Create New Campground</h1>
	<div style="width: 30%; margin: 25px auto;">
		<form action="/campgrounds" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="name" placeholder="campname">
			</div>
			<div class="form-group">
	    		<input class="form-control" type="text" name="img" placeholder="url">
			</div>
			<div class="form-group">
	    		<input class="form-control" type="text" name="desc" placeholder="description">
			</div>
			<div class="form-group">
				<button class="btn btn-primary btn-block">Submit</button>
			</div>
		</form>
		<a href="/campgrounds">Go back</a>
		
		
	</div>
	
	



	
</div>

