<%-include("../partials/header")%>;










<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcme to YelpCamp!!!</h1>
			<p>Get a glimse of campgrounds from all over the world</p>
			<p>
				<a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new one</a>
			</p>
		</div>
	
	</header>

	<div class="row text-center" style="display:flex; flex-wrap: wrap;">
		<%camp.forEach(function(c){%>
		<div class="col-md-3 col-sm-6">
			
			<div class="thumbnail">
				<img style="width: 100%; height: 200px;" src="<%=c.image%>">
				<div class="caption" style>
					 <h4><%=c.name.toUpperCase()%></h4>
				</div>
				<a href="/campgrounds/<%=c._id%>" class="btn btn-primary">More Info</a>
			</div>	
		</div>
			
			
	<%})%>
		
	</div>
	
	
</div>




<%-include("../partials/footer")%>;